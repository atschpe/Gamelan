<resources>
    <!-- No actionbar, as this app acts as a poster/single screen. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <!--General Text style.-->
    <style name="Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingTop">@dimen/padding</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
    </style>

    <!--Adapting gravity and passing for copright.-->
    <style name="Text.Copyright">
        <item name="android:gravity">right</item>
        <item name="android:padding">@dimen/smallpadding</item>
    </style>
</resources>